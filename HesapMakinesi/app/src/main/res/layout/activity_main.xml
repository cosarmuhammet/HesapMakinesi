<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/arkaplan"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/hesaplama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="end"
        android:hint="0"
        android:inputType="number"
        android:paddingTop="90dp"
        android:paddingRight="25dp"
        android:paddingBottom="50dp"
        android:textAlignment="textEnd"
        android:textSize="45dp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/sayi7"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@drawable/butonsekil"
                android:backgroundTint="#2196F3"
                android:onClick="butontik"
                android:text="7"
                android:textSize="36sp" />

            <Button
                android:id="@+id/sayi8"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@drawable/butonsekil"
                android:backgroundTint="#2196F3"
                android:onClick="butontik"
                android:text="8"
                android:textSize="36sp" />

            <Button
                android:id="@+id/sayi9"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@drawable/butonsekil"
                android:backgroundTint="#2196F3"
                android:onClick="butontik"
                android:text="9"
                android:textSize="36sp" />

            <Button
                android:id="@+id/carpi"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@drawable/butonsekil"
                android:backgroundTint="#2196F3"
                android:onClick="butonislem"
                android:text="X"
                android:textSize="36sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/sayi4"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@drawable/butonsekil"
                android:backgroundTint="#2196F3"
                android:onClick="butontik"
                android:text="4"
                android:textSize="36sp" />

            <Button
                android:id="@+id/sayi5"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@drawable/butonsekil"
                android:backgroundTint="#2196F3"
                android:onClick="butontik"
                android:text="5"
                android:textSize="36sp" />

            <Button
                android:id="@+id/sayi6"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@drawable/butonsekil"
                android:backgroundTint="#2196F3"
                android:onClick="butontik"
                android:text="6"
                android:textSize="36sp" />

            <Button
                android:id="@+id/eksi"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@drawable/butonsekil"
                android:backgroundTint="#2196F3"
                android:onClick="butonislem"
                android:text="-"
                android:textSize="36sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/sayi1"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@drawable/butonsekil"
                android:backgroundTint="#2196F3"
                android:onClick="butontik"
                android:text="1"
                android:textSize="36sp" />

            <Button
                android:id="@+id/sayi2"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@drawable/butonsekil"
                android:backgroundTint="#2196F3"
                android:onClick="butontik"
                android:text="2"
                android:textSize="36sp" />

            <Button
                android:id="@+id/sayi3"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@drawable/butonsekil"
                android:backgroundTint="#2196F3"
                android:onClick="butontik"
                android:text="3"
                android:textSize="36sp" />

            <Button
                android:id="@+id/arti"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@drawable/butonsekil"
                android:backgroundTint="#2196F3"
                android:onClick="butonislem"
                android:text="+"
                android:textSize="36sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/AC"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@drawable/butonsekil"
                android:backgroundTint="#FF5722"
                android:onClick="ac"
                android:text="AC"
                android:textSize="36sp" />

            <Button
                android:id="@+id/sayi0"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@drawable/butonsekil"
                android:backgroundTint="#2196F3"
                android:onClick="butontik"
                android:text="0"
                android:textSize="36sp" />

            <Button
                android:id="@+id/bolu"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@drawable/butonsekil"
                android:backgroundTint="#2196F3"
                android:onClick="butonislem"
                android:text="/"
                android:textSize="36sp" />

            <Button
                android:id="@+id/esittir"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@drawable/butonsekil"
                android:backgroundTint="#FF5722"
                android:onClick="butonhesapla"
                android:text="="
                android:textColorLink="#F44336"
                android:textSize="36sp" />
        </TableRow>

    </TableLayout>
</LinearLayout>